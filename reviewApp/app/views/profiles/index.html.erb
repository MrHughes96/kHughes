
<div class="container">
	<h1>Profiles</h1>
	<table border="1" class="table-striped">
		<tr>
			<th>Name</th>
			
			<th>Date of Birth</th>
			
			<th>Address</th>
			
			<th>City</th>
			
			<th>Country</th>
			
			<th>Profile Image</th>
			<th>Edit Profile </th>
			<th>Delete Profile </th>
		</tr>
		<% @profiles.each do |profile| %>
		<tr>
			<td> <%=profile.pname %> </td>
			<td> <%=profile.dob %> </td>
			<td><%=profile.address%> </td>
			<td><%=profile.city%> </td>
			<td><%=profile.country %> </td>
			<td><%=image_tag profile.userimg.url, :size => "150x150" %> </td>
			<td> <%= link_to 'Edit Profile', edit_profile_path(profile) %> </td>
			<td><%= link_to 'Delete Profile', profile_path(profile), method: :Delete,data: {confirm: "Are you sure you want to delete the  profile"}%> </td>
		</tr>
		<% end %>
	</table>
</div>
