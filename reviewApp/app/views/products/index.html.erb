<div class="container">
	<h2>Products Available </h2>
	<p><%= link_to 'Add New Product', new_product_path %></p>
	<table border="1" class="table">
		<tr>
			<th>Product Name</th>
			
			<th>Brand</th>
			
			<th>Average Cost</th>
			
			<th>Category</th>
			
			<th>Release Date</th>
			
			<th>Description</th>
			
			<th>Product Image</th>
			
			
		</tr>
		<% @products.each do |product| %>
		<tr>
			<td> <%=product.productName %> </td>
			<td> <%=product.brand %> </td>
			<td><%=product.avgCost%> </td>
			<td><%=product.category%> </td>
			<td><%=product.releaseDate %> </td>
			<td><%=product.description %> </td>
			<td><%=image_tag product.prodimg.url, :size => "150x150" if product.prodimg.exists? %></td>
			<td> <%= link_to 'Product Page', product_path(product) %> </td>
		</tr>
		<% end %>
	</table>

</div>
