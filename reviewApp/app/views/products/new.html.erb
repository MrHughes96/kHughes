<div class="container">
<h1> Add new Product </h1>
<%= form_for :product, url: products_path do |f| %>
<div class="form-group">
	<%= f.label :productName %>
	<%= f.text_field :productName %>
</div>
<div class="form-group">
	<%= f.label :brand %>
	<%= f.text_field :brand %>
</div>
<div class="form-group">
	<%= f.label :avgCost %>
	<%= f.number_field :avgCost %>
</div>
<div class="form-group">
	<%= f.label :category %>
	<%= f.text_field :category %>
</div>
<div class="form-group">
	<%= f.label :releaseDate %>
	<%= f.date_field :releaseDate %>
</div>
<div class="form-group">
	<%= f.label :description %>
	<%= f.text_field :description %>
</div>
<div class="form-group">
	<%= f.label :productimg %>
	<%= f.text_field :productimg %>
<div class="form-group">
	<%= f.submit %>
</div>
<% end %>
</div>
