<div class="container">
<h1> Add new Product </h1>
<%= form_for :product, url: products_path do |f| %>
<div class="form-group">
	<%= f.label :productName %>
	<%= f.text_field :productName , class: 'form-control'%>
</div>
<div class="form-group">
	<%= f.label :brand %>
	<%= f.text_field :brand , class: 'form-control'%>
</div>
<div class="form-group">
	<%= f.label :avgCost %>
	<%= f.number_field :avgCost , class: 'form-control'%>
</div>
<div class="form-group">
	<%= f.label :category %>
	<%= f.text_field :category , class: 'form-control'%>
</div>
<div class="form-group">
	<%= f.label :releaseDate %>
	<%= f.date_field :releaseDate , class: 'form-control'%>
</div>
<div class="form-group">
	<%= f.label :description %>
	<%= f.text_field :description , class: 'form-control'%>
</div>
<div class="form-group">
	<%= f.label :prodimg %>
	<%= f.file_field :prodimg , class: 'form-control'%>
<div class="form-group">
	<%= f.submit %>
</div>
<% end %>
</div>
