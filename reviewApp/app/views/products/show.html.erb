<div class="container">

	<h3>Product Details</h3>
	<table border="2" class="table">
		<tr>
			<th>Product Name</th>
			<th>Brand </th>
			<th>Avg Cost</th>
			<th>Category</th>
			<th>Release Date</th>
			<th>Description</th>
			<th>Image</th>
		</tr>

		<tr>
	<td><%=@product.productName %></td>
	<td><%=@product.brand %></td>
	<td><%=@product.avgCost %></td>
	<td><%=@product.category %></td>
	<td><%=@product.releaseDate %></td>
	<td><%=@product.description %></td>
	<td><%= image_tag(@product.prodimg.url,size: '200x200') if @product.prodimg.exists? %></td>
</tr>
</table>
</div>
<div class="container">
	<h2>Product Reviews </h2>
	
	<table border="1" class="table">
		<tr>
			<th>Author</th>
			
			<th>Rating</th>
			
			<th>Content</th>
			
			<th>Date</th>	
		</tr>
		<% @review.each do |review| %>
		<tr>
			<td><%=review.author %></td>
			<td><%=review.rating %> </td>
			<td><%=review.content %> </td>
			<td><%=review.date %></td>
			 
		</tr>
		<% end %>
	</table>
	<a><%= link_to 'Add New Review', new_tv_review_path %> </a>
</div>
