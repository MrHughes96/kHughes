<div class="container">
	<h2>TV Reviews </h2>
	
	<table border="1" class="table">
		<tr>
			<th>Author</th>
			
			<th>Rating</th>
			
			<th>Content</th>
			
			<th>Date</th>
			
			
			
			
		</tr>
		<% @tvreview.each do |tvreview| %>
		<tr>
			<td><%=tvreview.author %></td>
			<td><%=tvreview.rating %> </td>
			<td><%=tvreview.content %> </td>
			<td><%=tvreview.date %></td>
			 <td><%= link_to 'Edit Review',edit_tv_review_path(tvreview) %> </td>
			 <td><%= link_to 'Delete Review', tv_review_path(tvreview), method: :Delete,data: {confirm: "Are you sure you want to delete the details?"}%> </td>
		</tr>
		<% end %>
	</table>
	<a><%= link_to 'Add New Review', new_tv_review_path %> </a>
</div>
