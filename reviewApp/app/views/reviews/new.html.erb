<div class="container">
<h1> Add New Review </h1>
<%= form_for :review, url: reviews_path do |f| %>
<div class="form-group">
	<%= f.label :author %>
	<%= f.text_field :author %>
</div>
<div class="form-group">
	<%= f.label :rating %>
	<%= f.number_field :rating %>
</div>
<div class="form-group">
	<%= f.label :reviewtext %>
	<%= f.text_area :reviewtext %>
</div>
<div class="form-group">
	<%= f.label :date %>
	<%= f.date_field :date %>
</div>
<div class="form-group">
	<%= f.submit %>
</div>
<% end %>
</div>